<%@ page language="java" contentType="text/html; charset=utf-8"
    pageEncoding="utf-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>Insert title here</title>
<link rel="stylesheet" type="text/css" href="/tiremusic/easyui/themes/default/easyui.css">
<link rel="stylesheet" type="text/css" href="/tiremusic/easyui/themes/icon.css">
<style type="text/css">
	input {
		margin-top: 15px;	
	}
	#btn_1{
		margin:10px 0px 0px 100px; 
	}
	#btn_2{
		margin:10px 0px 0px 100px; 
	}
	select {
		margin-top: 10px;	
	}
</style>
</head>
<body>
 
	<table id="dg"></table>  
	<div id="win_1">
		<form action="">
			歌曲名称：<select name="songid"style="width: 120px;">
						<option value="">--请选择--</option>
					</select><br/>
			发行时间：<input  id="dd"  type= "text" class= "easyui-datebox" style="width: 150px;margin-top: 20px"> </input>  <br/>
			歌曲封面:<input class="easyui-filebox" style="width:150px;margin-top: 15px"><br/>
			<a id="btn_1" href="javascript:addMV()" class="easyui-linkbutton" data-options="iconCls:'icon-add'">添加MV</a>
		</form>
	</div>  
	<div id="win_2">
		<form action="">
			歌曲名称：<select name="songid"style="width: 120px;">
						<option value="">--请选择--</option>
					</select><br/>
			发行时间：<input  id="dd"  type= "text" class= "easyui-datebox" style="width: 150px;margin-top: 20px"> </input>  <br/>
			下载次数:<input class="easyui-textbox" data-options="readonly:true" style="width: 150px;margin-top: 20px"><br/> 
			歌曲封面:<input class="easyui-filebox" style="width:150px;margin-top: 15px"><br/>
			<a id="btn_2" href="javascript:editMV()" class="easyui-linkbutton" data-options="iconCls:'icon-edit'">修改MV</a>
		</form>
	</div>  
	<script type="text/javascript" src="/tiremusic/easyui/jquery.min.js"></script>
	<script type="text/javascript" src="/tiremusic/easyui/jquery.easyui.min.js"></script>
	<script type="text/javascript" src="/tiremusic/easyui/locale/easyui-lang-zh_CN.js"></script> 
	<script type="text/javascript">
	//初始化新窗口
	$('#win_1').window({  
		title:'添加MV',
	    width:600,    
	    height:400,    
	    modal:true,
	    closed:true
	});
	$('#win_2').window({  
		title:'修改MV',
	    width:600,    
	    height:400,    
	    modal:true,
	    closed:true
	});
	//加载用户信息
	$('#dg').datagrid({    
	    url:'', 
	    rownumbers:true,
	    singleSelect:true,
	    pagination:true,
	    height:460,
	    singleSelect:true,
	    toolbar: [{
			iconCls: 'icon-add',
			text:'增加',
			handler: function(){
				$('#win_1').window('open');
			}
		},'-',{
			iconCls: 'icon-remove',
			text:'删除',
			handler: function(){
				$.messager.alert('警告','服务器发生错误！请稍后重试');    
				$.messager.confirm('确认','您确认想要删除记录吗？',function(r){    
				    if (r){    
				        alert('确认删除');    
				    }    
				}); 
			}
		},'-',{
			iconCls: 'icon-edit',
			text:'修改',
			handler: function(){
				$('#win_2').window('open');
			}
		}],
	    columns:[[    
	        {field:'mvid',title:'MV编号',width:100},    
	        {field:'songid',title:'歌曲id',width:100,hidden:true},    
	        {field:'songname',title:'歌曲名称',width:100},
	        {field:'releasetime',title:'发行时间',width:100},
	        {field:'downloadtimes',title:'下载次数',width:100},
	        {field:'frontimg',title:'MV封面',width:100}
	    ]]    
	}); 
		
	</script>
</body>
</html>