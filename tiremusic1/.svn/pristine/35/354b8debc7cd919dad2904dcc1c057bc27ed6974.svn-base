<%@ page language="java" contentType="text/html; charset=utf-8"
    pageEncoding="utf-8"%>
<%
	String basepath = request.getContextPath();
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>用户管理主界面</title>
<link rel="stylesheet" type="text/css" href="<%=basepath %>/easyui/themes/default/easyui.css">
<link rel="stylesheet" type="text/css" href="<%=basepath %>/easyui/themes/icon.css">
<style type="text/css">
	input {
		margin-top: 10px;	
	}
	#btn_1{
		margin:10px 0px 0px 100px; 
	}
	#btn_2{
		margin:10px 0px 0px 100px; 
	}
</style>
</head>
<body>
 
	<table id="dg"></table>  
	<div id="win_1">
		<form action="">
			用户姓名：<input type="text" name="uname"/><br/>
			真实姓名：<input type="text" name="realname"/><br/>
			用户密码：<input type="text" name="upassword"/><br/>
			用户地址：<input type="text" name="uaddress"/><br/>
			用户邮箱：<input type="text" name="uemail"/><br/>
			用户电话：<input type="text" name="utelephone"/><br/>
			身份证号：<input type="text" name="uidnumber"/><br/>
			用户头像:<input class="easyui-filebox" style="width:150px;margin-top: 15px" data-options="buttonText:'选择文件'"><br/>
			<a id="btn_1" href="javascript:addUser()" class="easyui-linkbutton" data-options="iconCls:'icon-add'">添加用户</a>
		</form>
	</div>  
	<div id="win_2">
		<form action="">
			用户姓名：<input type="text" name="uname"/><br/>
			真实姓名：<input type="text" name="realname"/><br/>
			用户密码：<input type="text" name="upassword"/><br/>
			用户地址：<input type="text" name="uaddress"/><br/>
			用户邮箱：<input type="text" name="uemail"/><br/>
			用户电话：<input type="text" name="utelephone"/><br/>
			身份证号：<input type="text" name="uidnumber"/><br/>
			用户头像:<input class="easyui-filebox" style="width:150px;margin-top: 15px" data-options="buttonText:'选择文件'"><br/>
			<a id="btn_2" href="javascript:editUser()" class="easyui-linkbutton" data-options="iconCls:'icon-edit'">修改用户</a>
		</form>
	</div>  
	<script type="text/javascript" src="<%=basepath %>/easyui/jquery.min.js"></script>
	<script type="text/javascript" src="<%=basepath %>/easyui/jquery.easyui.min.js"></script>
	<script type="text/javascript" src="<%=basepath %>/easyui/locale/easyui-lang-zh_CN.js"></script> 
	<script type="text/javascript">
	//初始化新窗口
	$('#win_1').window({  
		title:'添加用户',
	    width:600,    
	    height:400,    
	    modal:true,
	    closed:true
	});
	$('#win_2').window({  
		title:'修改用户',
	    width:600,    
	    height:400,    
	    modal:true,
	    closed:true
	});
	//加载用户信息
	$('#dg').datagrid({    
	    url:'', 
	    rownumbers:true,
	    singleSelect:true,
	    pagination:true,
	    height:460,
	    singleSelect:true,
	    toolbar: [{
			iconCls: 'icon-add',
			text:'增加',
			handler: function(){
				$('#win_1').window('open');
			}
		},'-',{
			iconCls: 'icon-remove',
			text:'删除',
			handler: function(){
				$.messager.alert('警告','服务器发生错误！请稍后重试');    
				$.messager.confirm('确认','您确认想要删除记录吗？',function(r){    
				    if (r){    
				        alert('确认删除');    
				    }    
				}); 
			}
		},'-',{
			iconCls: 'icon-edit',
			text:'修改',
			handler: function(){
				$('#win_2').window('open');
			}
		},'-',{
			iconCls: 'icon-edit',
			text:'禁用',
			handler: function(){
				$.messager.alert('警告','服务器发生错误！请稍后重试');    
				$.messager.confirm('确认','您确认想要禁用该用户吗？',function(r){    
				    if (r){    
				        alert('确认禁用');    
				    }    
				}); 
			}
		}],
	    columns:[[  
	    	{field:'checkbox',title:'',width:100,checkbox:true}, 
	        {field:'uid',title:'用户编号',width:100},    
	        {field:'uname',title:'用户名称',width:100},    
	        {field:'realname',title:'用户真实姓名',width:100},
	        {field:'upassword',title:'用户密码',width:100},
	        {field:'uaddress',title:'用户地址',width:100},
	        {field:'uemail',title:'用户邮箱',width:100},
	        {field:'utelephone',title:'用户电话',width:100},
	        {field:'uidnumber',title:'身份证号码',width:100},
	        {field:'avatar',title:'用户头像',width:100},
	        {field:'ustate',title:'用户状态',width:100}
	    ]]    
	}); 
		
	</script>
</body>
</html>